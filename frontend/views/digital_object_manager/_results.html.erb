<div class="record-pane">
  <% if @search_data.results? %>
    <%= render_aspace_partial :partial => "shared/pagination_summary" %>

    <table id="tabledSearchResults" class="table table-striped table-bordered table-condensed table-hover table-sortable table-digitized-object">
    <thead>
      <tr>
        <th>Title</th>
        <th>Record Number</th>
        <th>Level</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @search_data['results'].each do |result| %>
      <% item = JSON.parse(result["json"]) %>
      <tr>
        <td><%= clean_mixed_content(result["title"]).html_safe %></td>
        <td><%= clean_mixed_content(item["component_id"]).html_safe %></td>
        <td><%= clean_mixed_content(I18n.t("enumerations.archival_record_level.#{item["level"]}")).html_safe %></td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to I18n.t("plugins.digital_object_manager.actions.view"), {:controller => :resolver, :action => :resolve_readonly, :uri => result["id"]}, :class => "btn btn-xs btn-default" %>
            <%= link_to I18n.t("plugins.digital_object_manager.actions.select"), {:controller => :digital_object_manager, :action => :select, :uri => result["id"]}, :class => "btn btn-xs btn-primary" %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
    </table>

    <%= render_aspace_partial :partial => "shared/pagination" %>
  <% else %>
    <p class="alert alert-info">No results</p>
  <% end %>
</div>
